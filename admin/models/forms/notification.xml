<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" 
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			size="10" 
			default="0"
			required="true" 
			readonly="true"
			class="readonly"
		/>

		<field name="regid" 
			type="text"
			label="COM_GCMSERVER_FIELD_REGID_LABEL" 
			description="COM_GCMSERVER_FIELD_REGID_DESC"
			class="inputbox" 
			size="30" 
		 />
		 
		 <field name="collapse_key" 
			type="text"
			label="COM_GCMSERVER_FIELD_COLLAPSEKEY_LABEL" 
			description="COM_GCMSERVER_FIELD_COLLAPSEKEY_DESC"
			class="inputbox" 
			size="30" 
		 />
		 
		 <field name="title" 
			type="text"
			label="COM_GCMSERVER_FIELD_TITLE_LABEL" 
			description="COM_GCMSERVER_FIELD_TITLE_LABEL"
			class="inputbox" 
			size="30" 
		 />
		 
		 <field name="profile_id" 
			type="modalprofiles"
			label="COM_GCMSERVER_FIELD_PROFILE_LABEL" 
			description="COM_GCMSERVER_FIELD_PROFILE_DESC"
			class="inputbox" 
			size="30" 
		 />
		 
		 <field name="topic_id" 
			type="topicselect"
			label="COM_GCMSERVER_FIELD_TOPIC_LABEL" 
			description="COM_GCMSERVER_FIELD_TOPIC_DESC"
			class="inputbox" 
			size="30" 
		 />

		<field name="message" 
			type="textarea" 
			label="COM_GCMSERVER_FIELD_MESSAGE_LABEL"
			description="COM_GCMSERVER_FIELD_MESSAGE_DESC" 
			class="inputbox" 
			size="30" 
		/>
		
		<field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		
		<field name="modified" type="text" label="Modificado" description="" readonly="true" class="readonly" size="30" />
		<field name="created" type="text" label="Creado" description="" readonly="true" class="readonly" size="30" />
<field name="sent" type="text" label="enviado" description="" readonly="true" class="readonly" size="30" />

		<field name="checked_out" 
			type="hidden" 
			filter="unset" 
		/>

		<field name="checked_out_time" 
			type="hidden" 
			filter="unset"
		 />

		<field name="ordering" 
			type="ordering" 
			class="inputbox"
			label="JFIELD_ORDERING_LABEL" 
			description="JFIELD_ORDERING_DESC" 
		/>

		
	</fieldset>

	
</form>
